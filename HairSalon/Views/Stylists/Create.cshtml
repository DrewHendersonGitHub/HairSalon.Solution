@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h3><em>New Stylist</em></h3>
<hr>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Stylist Name: ")
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Specialty, "Area of Specialty: ")
  @Html.TextBoxFor(model => model.Specialty)
  <br>
  <input class="btn btn-success" type="submit" value="Submit" />
}
<hr>
<h5>@Html.ActionLink("Back to Stylists", "Index")</h5>