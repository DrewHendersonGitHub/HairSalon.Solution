@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h4><em>Stylist details</em></h4>
<hr>
<h3>Details for stylist @Html.DisplayFor(model => model.Name):</h3>
<h3>Specialty: @Html.DisplayFor(model => model.Specialty)</h3>
<hr>
<h2>Clients:</h2>
@if (Model.Clients.Count() < 1)
{
  <h3>No Clients</h3>
  <button><h5>@Html.ActionLink("Add new client", "Create", "Clients")</h5></button>
}
@foreach (Client client in Model.Clients)
{
  <h5><li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li></h5>
}
<hr>
<h4>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</h4>
<h4>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</h4>
<hr>
<h5>@Html.ActionLink("Back to Stylists", "Index")</h5>