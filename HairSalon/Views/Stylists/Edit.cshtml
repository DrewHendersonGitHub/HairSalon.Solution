@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h3><em>Edit Stylist:</em></h3>
<hr>
<h4>Edit @Html.DisplayFor(model => model.Name):</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name, "New Stylist Name: ")
  @Html.EditorFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Specialty, "New Area of Specialty: ")
  @Html.EditorFor(model => model.Specialty)
  <br>
  <input class="btn btn-success" type="submit" value="Save" />
}
<hr>
<h5>@Html.ActionLink("Back to Stylists", "Index")</h5>