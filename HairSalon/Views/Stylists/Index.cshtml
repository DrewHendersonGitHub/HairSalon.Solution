@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>All Stylists:</h2>
<hr>
@if (@Model.Count == 0)
{
  <h4>There aren't any stylists currently in the system.</h4>
} 

<ul>
  @foreach(Stylist s in Model)
  {
    <li>@Html.ActionLink($"{s.Name}", "Details", new { id = s.StylistId })</li>
  }
</ul>
<hr>
<h3>@Html.ActionLink("New Stylist", "Create")</h3>